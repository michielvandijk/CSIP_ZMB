publisher = {Elsevier},
title = {{The impact of conservation agriculture on smallholder agricultural yields: A scoping review of the evidence}},
url = {https://www.sciencedirect.com/science/article/pii/S0167880913002703?via{\%}3Dihub},
volume = {187},
year = {2014}
}
