author = {Brouder, Sylvie M. and Gomez-Macpherson, Helena},
doi = {10.1016/J.AGEE.2013.08.010},
file = {:C$\backslash$:/Users/vandijkm/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Brouder, Gomez-Macpherson - 2014 - The impact of conservation agriculture on smallholder agricultural yields A scoping review of the evi.pdf:pdf},
issn = {0167-8809},
journal = {Agriculture, Ecosystems {\&} Environment},
month = {apr},
