doi = {10.5194/hess-19-3073-2015},
issn = {1607-7938},
journal = {Hydrology and Earth System Sciences},
month = {jul},
number = {7},
pages = {3073--3091},
title = {{Water savings potentials of irrigation systems: global simulation of processes and linkages}},
