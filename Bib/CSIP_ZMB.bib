doi = {10.1016/J.AGWAT.2005.07.014},
file = {:C$\backslash$:/Users/vandijkm/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/B{\"{a}}nziger et al. - 2006 - Breeding for improved abiotic stress tolerance in maize adapted to southern Africa.pdf:pdf},
